extends layout.pug

block main
    section.namecard
        .namecard-hello
            if username
                p.namecard-greeting Welcome, #{username}!
                form.namecard-exit(action='/goodbye', method='POST')
                    button(type="submit")
                        img(src="/static/img/close.svg")
            else 
                p.namecard-greeting Hello, student!
        block intro
    block card   